/* pages/login/login.wxss */
page {
  background-color: #fff;
}

.container {

  margin: 0 80rpx;
  position: relative;
}

.image-wrap {

  height: 155rpx;
  margin-top: 50rpx;

}

.image-logo {
  height: 100%;
  width: 100%;
}

.form-wrap {
  margin-top: 180rpx;
}

.input-wrap,
.login-btn {

  height: 85rpx;
  border-radius: 50rpx;
}

.input-wrap {

  padding: 0 15rpx;

  display: flex;
  align-items: center;
  border: solid 1px#d9dbde;
  justify-content: space-between;

}

.input-password-wrap {

  margin-top: 25rpx;
}

.input_username,
.input_password {

  width: 80%;

}


.placeholder_input {

  color: #d2d2d2;

}

.login-btn {

  /* margin-top: 80rpx;

